<h1>My Portfolio</h1>
<div class="py-2">
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-12">
        <div class="input-group">
          <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg"%>
          <div class="input-group-append">
            <%= button_tag type: :submit, class: "btn btn-info" do %>
              <%= fa_icon 'search 2x' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
</div>
<% if !@tracked_stocks.empty? %>
<table class="table table-bordered table-hover mt-4">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
      <tr>
        <th scope="row"><%= stock.ticker%></th>
        <td><%= stock.name %></td>
        <td><%= stock.last_price %></td>
        <td><%= link_to 'Remove',user_stock_path(stock) ,method: :delete, data: {confirm: 'Are you sure?'},
        class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
