<div class="row">
  <div class="col-12 col-md-6">
    <%= render 'layouts/messages' %>
  </div>
</div>
<% if @friends %>
  <div class="card card-header py-3">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name</strong> <%= friend.full_name %></td>
            <td><strong>Email:</strong> <%= friend.email %></td>
            <td><strong>Profile:</strong><%= link_to "View profile", user_path(friend),class: "btn btn-sm btn-info" %>
              <% if current_user.not_friends_with?(friend.id)%>
                <%= link_to "Follow friend?", friendships_path(friend: friend) ,class: "btn btn-sm btn-info", method: :post %>
              <% else %>
                <span class="badge badge-secondary">
                  You're already friends
                </span>
              <% end %>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
<% end %>
